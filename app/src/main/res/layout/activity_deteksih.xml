<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".deteksi"
    android:background="@drawable/deteksi">


    <TextView
        android:id="@+id/textView"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/shadowdeteksi"
        android:fontFamily="@font/felixti"
        android:letterSpacing=".2"
        android:padding="20sp"
        android:paddingHorizontal="25dp"
        android:text="DETEKSI"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="487dp"
        app:layout_constraintWidth_percent=".9"
        android:layout_marginVertical="@dimen/default_gap"
        android:background="@drawable/deteksi_button_2"
        android:gravity="center_vertical"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="25dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Media -->

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="194dp"
                    android:scaleType="centerCrop"
                    tools:srcCompat="@tools:sample/avatars" />

                <LinearLayout
                    android:id="@+id/kotakmain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Title, secondary and supporting text -->
                    <TextView
                        android:id="@+id/hasilprediksi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/felixti"
                        android:letterSpacing=".2"
                        android:text=""
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:textColor="@color/black"
                        android:textSize="24dp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/hasilklasifikasi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/felixti"
                        android:letterSpacing=".2"
                        android:text=""
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/solusi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/fenixregular"
                        android:letterSpacing=".2"
                        android:text=""
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Buttons -->


            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>
</ScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/deteksi_button"
        android:orientation="horizontal"
        android:elevation="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginStart="50dp"
            android:layout_weight="1"
            android:background="@drawable/shadowdeteksi2"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/kamera" />

        <View
            android:id="@+id/underlineView"
            android:layout_width="50sp"
            android:layout_height="2sp"
            android:layout_marginTop="50sp"
            android:rotation="90"
            android:background="@color/black"/>

        <ImageButton
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginEnd="50dp"
            android:layout_weight="1"
            android:background="@drawable/shadowdeteksi2"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/galery" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
